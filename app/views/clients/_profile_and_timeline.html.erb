    </div>


    <div class="timeline-item">
      <div class="vert-line"></div>
      <i class="timeline-icon fa fa-map-marker"></i>
      <div class="timeline-text-container">
        <span class="timeline-main-text">Client Shared Location <%#= interaction.type #(on the event though?) %></span>
        <span class="timeline-sub-text">Oct 20 2016 10:20 AM | Tony Pitale <%#= interaction.created_at.strftime('%e %b %Y %I:%M%p') | interaction.user.first_name interaction.user.last_name %></span>
        <span class="timeline-desc">253 Eckford St, #3B<%#= interaction.description %></span>
      </div>
    </div>

  </div>

