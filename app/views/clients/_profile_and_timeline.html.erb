<div class="profile-container">

  <div class="profile-top">
    <p class="name"><%= @client.name %></p>
    <p class="top-field"><%= @client.formatted_birthdate %></p>
    <p class="top-field"><%= human_readable_text(@client.gender) %> | <%= human_readable_text(@client.ethnicity) %></p>
    <p class="top-field"><%= @client.phone %></p>
    <%= link_to "Edit Client", edit_users_interaction_client_path(@interaction, @client) %>
  </div>


  <div class="referral-start-container">
    <p>Refer Client To Services:</p>
    <%= select_tag "author",
      options_for_select(["Emergency Shelter", "Food Programs & Pantries", "Utility Assistance"]),
      id: "service-type-search",
      class: "selectize sans-body",
      prompt: "Select A Service Type"  %>
  </div>

  <div id="profile-toggle-container">
    <%= link_to "Activity Log", "#", class: "profile-toggle-btn active", onclick: "$('.profile-toggle-btn').removeClass('active');$(this).addClass('active');$(this).addClass('active'); $('.client-details-container').removeClass('active'); $('.timeline-container').addClass('active'); return false;" %>
    <%= link_to "Client Details", "#", class: "profile-toggle-btn", onclick: "$('.profile-toggle-btn').removeClass('active');$(this).addClass('active');$(this).addClass('active'); $('.timeline-container').removeClass('active'); $('.client-details-container').addClass('active'); return false;"  %>
  </div>

  <div class="client-details-container">
    <p class="middle-field"><span class="field-title">Last Contacted:</span> Oct 4 2016 10:20 AM</p>
    <p class="middle-field"><span class="field-title">Contacted Via:</span> SMS, In-person</p>

    <hr>
    <p class="middle-field"><span class="field-title">Veteran:</span> <%= human_readable_boolean(@client.veteran?) %></p>
    <p class="middle-field"><span class="field-title">Domestic Abuse Victim: </span> <%= human_readable_boolean(@client.domestic_assault_victim?) %></p>
    <p class="middle-field"><span class="field-title">Employed:</span> <%= human_readable_boolean(@client.employed?) %></p>
    <p class="middle-field"><span class="field-title">Education Level:</span> <%= human_readable_text(@client.education) %></p>
  </div>

  <div class="timeline-container active">
    <div class="timeline-item">
      <%= link_to "#", class: "new-note-btn" do %>
        <i class="timeline-icon fa fa-plus "></i>
        <div class="timeline-text-container">
          <span class="timeline-main-text">Create A Note</span>
        </div>
      <% end %>
    </div>

    <div class="timeline-item">
        <div class="vert-line"></div>
        <i class="timeline-icon fa fa-comments"></i>
        <div class="timeline-text-container">
          <p class="interaction-status resolved"><i class="resolution-icon small fa fa-check"></i>Resolved</p>

          <span class="timeline-main-text">SMS Interaction <%#= interaction.type #(on the event though?) %></span>
          <span class="timeline-sub-text">Oct 20 2016 10:20 AM | Tony Pitale <%#= interaction.created_at.strftime('%e %b %Y %I:%M%p') | interaction.user.first_name interaction.user.last_name %></span>
          <span class="timeline-desc">Client seeking Housing<%#= interaction.description %></span>
          <%# if interaction.referral %>
            <div class="referral-container">
              <p class="referral-title">Client Referred to St Patricks <%#= interaction.service.provider %> for Housing<%#= interaction.service %></p>
              <p class="referral-note">Referral Note Here</p>
              <p class="referral-code"><span class="code-title">Code:</span> 11121</p>

              <div class="ref-btns">
                <%= link_to "resend", "#", class: "c-btn" %>
                <%= link_to "mark", "#", class: "c-btn" %>
              </div>
            </div>
          <%# end %>
        </div>
    </div>

    <div class="timeline-item">
        <div class="vert-line"></div>
        <i class="timeline-icon fa fa-phone "></i>
        <div class="timeline-text-container">
          <p class="interaction-status open"><i class="resolution-icon small fa fa-flag"></i>Open</p>
          <span class="timeline-main-text">Phone Interaction <%#= interaction.type #(on the event though?) %></span>
          <span class="timeline-sub-text">Oct 20 2016 10:20 AM | Tony Pitale <%#= interaction.created_at.strftime('%e %b %Y %I:%M%p') | interaction.user.first_name interaction.user.last_name %></span>
          <span class="timeline-desc">Client seeking Housing<%#= interaction.description %></span>
          <%# if interaction.referral %>
            <div class="referral-container">
              <p class="referral-title">Client Referred to St Patricks <%#= interaction.service.provider %> for Housing<%#= interaction.service %></p>
              <p class="referral-note">Referral Note Here</p>
              <p class="referral-code"><span class="code-title">Code:</span> 11121</p>

              <div class="ref-btns">
                <%= link_to "resend", "#", class: "c-btn" %>
                <%= link_to "mark", "#", class: "c-btn" %>
              </div>
            </div>
          <%# end %>
        </div>
    </div>

    <div class="timeline-item">
        <div class="vert-line"></div>
        <i class="timeline-icon fa fa-user"></i>
        <div class="timeline-text-container">
          <span class="timeline-main-text">In Person Interaction <%#= interaction.type #(on the event though?) %></span>
          <span class="timeline-sub-text">Oct 20 2016 10:20 AM | Tony Pitale <%#= interaction.created_at.strftime('%e %b %Y %I:%M%p') | interaction.user.first_name interaction.user.last_name %></span>
          <span class="timeline-desc">Client seeking Housing<%#= interaction.description %></span>
          <%# if interaction.referral %>
            <div class="referral-container">
              <p class="referral-title">Client Referred to St Patricks <%#= interaction.service.provider %> for Housing<%#= interaction.service %></p>
              <p class="referral-note">Referral Note Here</p>
              <p class="referral-code"><span class="code-title">Code:</span> 11121</p>

              <div class="ref-btns">
                <%= link_to "resend", "#", class: "c-btn" %>
                <%= link_to "mark", "#", class: "c-btn" %>
              </div>
            </div>
          <%# end %>
        </div>
    </div>


    <div class="timeline-item">
      <div class="vert-line"></div>
      <i class="timeline-icon fa fa-map-marker"></i>
      <div class="timeline-text-container">
        <span class="timeline-main-text">Client Shared Location <%#= interaction.type #(on the event though?) %></span>
        <span class="timeline-sub-text">Oct 20 2016 10:20 AM | Tony Pitale <%#= interaction.created_at.strftime('%e %b %Y %I:%M%p') | interaction.user.first_name interaction.user.last_name %></span>
        <span class="timeline-desc">253 Eckford St, #3B<%#= interaction.description %></span>
      </div>
    </div>

  </div>

</div>

<script>
$(document).ready(function(){
 $('.selectize').selectize({
    create          : false,
    onItemAdd: function(value, $item) {
      window.location.href = "/users/services?interaction_id=" + "<%=params['id'] %>" + "&service_name=" + value
    }
  })
})
</script>
